{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": "./src",
    "esModuleInterop": true,
    "lib": [
      "es2020"
    ],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "./dist",
    "skipLibCheck": true,
    "target": "ESNext"
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "**/*.test.*",
    "./dist",
    "./website",
    "./node_modules",
    "./test"
  ]
}
