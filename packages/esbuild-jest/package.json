{
  "name": "@nlabs/esbuild-jest",
  "version": "1.37.0",
  "description": "Jest plugin to use esbuild for transformation",
  "main": "esbuild-jest.js",
  "module": "esbuild-jest.es.js",
  "typings": "esbuild-jest.d.ts",
  "scripts": {
    "build": "NODE_ENV=production && rm -rf dist && esbuild src/**.ts* --platform=node --outdir=./dist --sourcemap=inline --target=node16 --format=cjs",
    "clean": "rm -rf dist node_modules package-lock.json *.log coverage",
    "test": "jest --clearCache && jest --detectOpenHandles"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nitrogenlabs/esbuild-jest.git"
  },
  "keywords": [
    "esbuild",
    "jest",
    "test"
  ],
  "author": "Arjay Elbore <aelbore.sg@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/aelbore/esbuild-jest/issues"
  },
  "homepage": "https://github.com/aelbore/esbuild-jest#readme",
  "engines": {
    "node": ">=16"
  },
  "peerDependencies": {
    "esbuild": ">=0.14.48",
    "typescript": "^4.2.3"
  },
  "dependencies": {
    "@babel/core": "^7.13.10",
    "@babel/plugin-transform-modules-commonjs": "^7.13.8",
    "@babel/plugin-transform-runtime": "^7.18.6",
    "@babel/preset-env": "^7.18.6",
    "@babel/preset-react": "^7.18.6",
    "@babel/preset-typescript": "^7.13.0",
    "@babel/runtime": "^7.18.6",
    "babel-jest": "^28.1.3"
  },
  "devDependencies": {
    "@types/jest": "^28.1.4",
    "@types/mock-fs": "^4.13.0",
    "@types/node": "^18.0.3",
    "esbuild": "^0.14.48",
    "eslint-config-styleguidejs": "^3.0.0",
    "jest": "^28.1.2",
    "jest-config": "^28.1.2",
    "tslib": "^2.1.0",
    "typescript": "^4.2.3"
  }
}
