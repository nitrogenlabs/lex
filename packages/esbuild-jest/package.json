{
  "name": "@nlabs/esbuild-jest",
  "version": "1.39.1",
  "description": "Jest plugin to use esbuild for transformation",
  "main": "esbuild-jest.js",
  "module": "esbuild-jest.es.js",
  "typings": "esbuild-jest.d.ts",
  "scripts": {
    "build": "NODE_ENV=production && rm -rf dist && esbuild src/**.ts* src/**/**.ts* --platform=node --outdir=./dist --sourcemap=inline --target=node18 --format=cjs",
    "clean": "rm -rf dist node_modules package-lock.json *.log coverage",
    "publish:major": "npm version major && npm publish",
    "publish:minor": "npm version minor && npm publish",
    "publish:patch": "npm version patch && npm publish",
    "test": "jest --clearCache && jest --detectOpenHandles"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nitrogenlabs/esbuild-jest.git"
  },
  "keywords": [
    "esbuild",
    "jest",
    "test"
  ],
  "author": "Arjay Elbore <aelbore.sg@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/aelbore/esbuild-jest/issues"
  },
  "homepage": "https://github.com/aelbore/esbuild-jest#readme",
  "engines": {
    "node": ">=18"
  },
  "peerDependencies": {
    "esbuild": ">=0.14.48",
    "typescript": "^4.2.3"
  },
  "dependencies": {
    "@babel/core": "^7.21.3",
    "@babel/plugin-transform-modules-commonjs": "^7.21.2",
    "@babel/plugin-transform-runtime": "^7.21.0",
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-react": "^7.18.6",
    "@babel/preset-typescript": "^7.21.0",
    "@babel/runtime": "^7.21.0",
    "@babel/runtime-corejs3": "^7.21.0",
    "babel-jest": "^29.5.0",
    "core-js-pure": "^3.29.1",
    "find-file-up": "^2.0.1",
    "metro-react-native-babel-preset": "^0.76.0",
    "rimraf": "^4.4.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/mock-fs": "^4.13.0",
    "@types/node": "^18.15.5",
    "esbuild": "^0.17.12",
    "eslint-config-styleguidejs": "^3.2.1",
    "jest": "^29.5.0",
    "jest-config": "^29.5.0",
    "tslib": "^2.5.0",
    "typescript": "^5.0.2"
  }
}