{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "esModuleInterop": true,
    "inlineSourceMap": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "lib": [
      "dom",
      "ESNext"
    ],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": false,
    "pretty": true,
    "resolveJsonModule": true,
    "outDir": "./lib",
    "rootDir": "./src",
    "skipLibCheck": true,
    "target": "ESNext",
    "types": [
      "node"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "**/*.test.*",
    "**/*.spec.*",
    "**/*.integration.*",
    "**/__tests__/**",
    "**/__mocks__/**",
    "src/vitest.d.ts",
    "lib",
    "node_modules",
    "vitest.config.mjs"
  ]
}
