{
  "private": true,
  "license": "MIT",
  "scripts": {
    "build": "lerna run build",
    "lint": "lerna run lint",
    "clean": "yarn clean:node-modules && yarn clean:logs && yarn clean:dist && yarn clean:yarn && yarn clean:npm",
    "clean:dist": "find . -name 'dist' -type d -exec rm -rf '{}' +",
    "clean:logs": "find . -name '*.log' -type f -delete",
    "clean:node-modules": "find . -name 'node_modules' -type d -exec rm -rf '{}' +",
    "clean:npm": "find . -name 'package-lock.json' -type f -delete",
    "clean:yarn": "find . -name 'yarn.lock' -type f -delete",
    "test": "jest --clearCache && jest",
    "update": "yarn upgrade-interactive --latest"
  },
  "devDependencies": {
    "jest-cli": "^23.6.0",
    "lerna": "^3.4.0",
    "ts-jest": "^23.10.1",
    "typescript": "^3.0.3"
  },
  "workspaces": [
    "packages/lex",
    "packages/favicons-webpack-plugin",
    "packages/static-site-webpack-plugin"
  ]
}
